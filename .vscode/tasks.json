{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "install",
			"args": ["install"]
		},
		{
			"taskName": "update",
			"args": ["update"]
		},
		{
			"taskName": "test",
			"args": ["run", "test"]
		},
		{
			"taskName": "build",
			"args": ["run", "prepare"]
		},
		{
			"taskName": "test-debug",
			"args": ["run", "test-debug"]
		},
		{
			"taskName": "test-cover",
			"args": ["run", "test-cover"]
		},
		{
			"taskName": "test-cover-report",
			"args": ["run", "test-cover-report"]
		}
	]
}